{
  "expo": {
    "name": "SpyGlass",
    "slug": "spyglass-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "spyglass",
    "userInterfaceStyle": "automatic",
    "platforms": [
      "ios",
      "android"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.spyglass.tracker",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show where you are on the map.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location to track you in the background."
      }
    },
    "android": {
      "package": "com.spyglass.tracker",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyC16ozJ_Td-VblgpI9uQhxXQ0RZyIpEQb4"
        }
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow SpyGlass to track you in the background so your partner can find you even when the app is closed."
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a5528f73-5528-4e37-afc1-6c7de222f8a4"
      }
    }
  }
}